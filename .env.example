# ============================================
# DeFAI Oracle Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# Twitter API Configuration
# ============================================
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# ============================================
# TikTok API Configuration
# ============================================
TIKTOK_API_KEY=your_api_key_here
TIKTOK_API_SECRET=your_api_secret_here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/defai_oracle
DATABASE_ECHO=False

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ============================================
# Blockchain Configuration
# ============================================
# Base Mainnet
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453

# Base Testnet (Sepolia)
BASE_TESTNET_RPC_URL=https://sepolia.base.org
BASE_TESTNET_CHAIN_ID=84532

# Private key for oracle node (DO NOT SHARE!)
PRIVATE_KEY=your_private_key_here

# Oracle contract address (will be set after deployment)
ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ============================================
# API Configuration
# ============================================
API_PORT=8000
API_HOST=0.0.0.0
API_TITLE=DeFAI Oracle API
API_VERSION=0.1.0
DEBUG=True
LOG_LEVEL=INFO

# ============================================
# ML Model Configuration
# ============================================
SENTIMENT_MODEL_NAME=distilbert-base-uncased
SENTIMENT_MODEL_PATH=./data/sentiment_model
DEVICE=cpu  # or cuda for GPU
BATCH_SIZE=32

# ============================================
# Data Pipeline Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TWEETS=raw-tweets
KAFKA_TOPIC_TIKTOKS=raw-tiktoks
KAFKA_TOPIC_SENTIMENT=processed-sentiment

# Update frequency in minutes
UPDATE_FREQUENCY_MINUTES=5

# ============================================
# Sentiment Analysis Configuration
# ============================================
SENTIMENT_CONFIDENCE_THRESHOLD=0.6
SENTIMENT_INTENSITY_THRESHOLD=0.5

# ============================================
# Oracle Node Configuration
# ============================================
NODE_ID=node-1
NODE_NAME=DeFAI Oracle Node 1
CONSENSUS_TIMEOUT_SECONDS=30

# ============================================
# Logging Configuration
# ============================================
LOG_FORMAT=json
LOG_FILE=logs/defai_oracle.log
LOG_LEVEL=INFO

# ============================================
# Feature Flags
# ============================================
ENABLE_TWITTER_SCRAPING=True
ENABLE_TIKTOK_SCRAPING=True
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_ORACLE_SUBMISSION=False  # Set to True after testnet deployment
ENABLE_MAINNET=False  # Set to True for mainnet

# ============================================
# Monitoring & Analytics
# ============================================
SENTRY_DSN=
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090
